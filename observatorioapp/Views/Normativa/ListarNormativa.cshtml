@model List<Normativa>
@{   
    Layout = "_Filtros";
    ViewData["Title"] = "LISTA DE NORMATIVAS";
}

<div class="container mt-5">

 <h1 class="text-center">@ViewData["Tittle"]</h1>

 <div class="mt-3">
   
    <a class="btn btn-warning" asp-controller="Normativa" asp-action="RegistrarNormativa">Nueva Normativa</a>

 </div>

  <br>

<table class="table table-striped table-hover">  

  <thead class="table-dark">
    <tr>  
        <th> Titulo </th> 
        <th> Codigo </th>
        <th> Emision </th>
        <th> Entidad </th>
        <th> Descargar </th>
        <th> Editar </th>
        <th> Eliminar </th>
          
    </tr>  

    </thead>
  
  <tbody>

@foreach (var item in Model) {  
    <tr>  
          
         <td> @Html.DisplayFor(modelItem => item.titulo) </td>  
         <td> @Html.DisplayFor(modelItem => item.numero) </td>
         <td> @Html.DisplayFor(modelItem => item.fecha) </td>
         <td> @Html.DisplayFor(modelItem => item.entidad.Nombre) </td>
         <td> @Html.ActionLink(item.nombrefile, "DownLoadNormativa" , new { id=item.id }) </td>
         <td> <a class="btn btn-info" asp-controller="Normativa" asp-action="EditarNormativa" asp-route-id="@item.id">Editar</a> </td>   
         <td> <a class="btn btn-danger" asp-controller="Normativa" asp-action="EliminarNormativa" asp-route-id="@item.id" >Eliminar</a></td> 
      
    </tr>  
}  

 </tbody>
  
</table> 

</div>