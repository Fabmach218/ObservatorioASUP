@model List<Noticia>
@{
    Layout = "_Administrador";
    ViewData["Title"] = "LISTA DE NOTICIAS";

}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br>

<div class="text-center">
 
    @if (Model.Count == 0) {
        <p>NO HAY NOTICIAS REGISTRADAS</p>
    }
    
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="noti" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="96" height="150"
                       src="@item.LinkImagen" alt="Icono"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.LinkNoticia)</p>
                  <center><a class="btn btn-primary" asp-controller="Noticia" asp-action="Edit" asp-route-id="@item.Id">EDITAR</a></center>
                  <br>
                  <center><a class="btn btn-danger" asp-action="Delete" id="delete" asp-route-id="@item.Id">ELIMINAR</a></center>
                  
                </div>
              </div>
            </div>
            }
         </div>
        </div>
      </div>
    </div>
  </div> 