@using System

@model List<Normativa>

@{
    ViewData["Title"] = "Resultados de la búsqueda";
    Layout = "_Filtros";
}



 <div class="container mt-5">

	 <h1 class="text-center">@ViewData["Title"]</h1>
	
	<div class="row">
	
  @if(Model.Count == 0){
    <div class="card col-12 mt-3">
      <div class="alert alert-warning text-center">Lo sentimos, su búsqueda no ha obtenido ningún resultado.</div>
      <a asp-controller="Filtro" asp-action="Busqueda" class="btn btn-primary">Ingresar otra consulta</a>
      <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Regresar al menú principal</a>
      <a class="btn btn-warning" href="mailto:info@asup.edu.pe">Enviar Correo de Consulta</a>
    </div>
  }
  
  
  @foreach (var item in Model)
	{
		 <div class="card col-12 mt-3">
           <h5 class="card-header">@item.numero</h5>
            <div class="card-body">
              <h5 class="card-title">@item.titulo</h5>
              <p class="card-text">@item.fecha.ToString("dd/MM/yyyy")</p>
              <p class="card-text">@item.entidad.Nombre</p>
              @Html.ActionLink("Descargar", "DownLoadNormativa" , new { id=item.id })
            </div>
        </div>

	}
        
		</div>

	</div>

	